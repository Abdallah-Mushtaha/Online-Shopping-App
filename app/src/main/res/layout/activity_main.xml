<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:background="#F2F2F2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationClient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationClient"
        android:layout_width="0dp"
        style="@style/Widget.Custom.BottomNavigationView"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:itemRippleColor="#54A8ED"
        app:itemTextColor="#EDFFFFFF"
        app:itemIconTint="#A0000000"
        app:itemBackground="@color/nav_item_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/Widget.Custom.BottomNavigationView"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:itemRippleColor="#54A8ED"
        app:itemTextColor="#EDFFFFFF"
        app:itemIconTint="#A0000000"
        app:itemBackground="@color/nav_item_background"
        app:menu="@menu/admin_navbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
