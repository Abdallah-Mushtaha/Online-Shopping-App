<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <EditText
            android:id="@+id/etProductNameDialog"
            android:hint="Product Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/etProductDescriptionDialog"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etProductPriceDialog"
            android:hint="The Price"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgProductPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:background="@drawable/rounded_edittext"
            android:id="@+id/spinnerCategoryDialog"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSelectImage"
            android:text="change picture"
            android:layout_width="match_parent"
            android:backgroundTint="@color/blue_active"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSelectLocation"
            android:text="Change Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_active"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/btnCancelDialog"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/Del_color"
                android:layout_height="wrap_content"
                android:text="Back"/>
            <Button
                android:id="@+id/btnSaveDialog"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/Suc_color"
                android:layout_height="wrap_content"
                android:text="Save"/>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
